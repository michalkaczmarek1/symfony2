{# app/Resources/TwigBundle/views/Exception/error.html.twig #}

{% extends "MasterTrainingBundle::base.html.twig" %}

{% block meta %}
    <meta charset="utf-8">
{% endblock %}

{% block title %}
    Wystąpił błąd | {{ parent() }}
{% endblock %}

{% block blogContainer %}
    <div class="jumbotron">
        <div class="container">
            <h1>Błąd: {{ status_code }}</h1>
            <p>{{ status_text }}</p>
            <p><a class="btn btn-primary btn-lg" href="{{ path('master_blog_index') }}" role="button">Wróć na stronę główną &raquo;</a></p>
        </div>
    </div>
{% endblock %}