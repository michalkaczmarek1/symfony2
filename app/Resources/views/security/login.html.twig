{% extends 'base.html.twig' %}	

{% block blogContainer %}

{% if error %}
    <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}

<div class="container" style="margin-top: 50px;">
<h1 style="text-align: center; margin-bottom: 50px;">Formularz logowania</h1>
    <form class="form-horizontal" action="{{ path('login') }}" method="post">
      <div class="form-group">
        <label for="username" class="col-sm-2 control-label">Username:</label>
        <div class="col-sm-10">
          <input type="text" class="form-control" name="_username" value="{{ last_username }}"  id="username" placeholder="username">
        </div>
      </div>
      <div class="form-group">
        <label for="password" class="col-sm-2 control-label">Hasło</label>
        <div class="col-sm-10">
          <input type="password" class="form-control" id="password" name="_password" placeholder="hasło">
        </div>
      </div>
      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <button type="submit" class="btn btn-default">Login</button>
        </div>
      </div>
    </form>
</div>
{% endblock %}
